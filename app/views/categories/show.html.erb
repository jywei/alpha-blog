  <% if logged_in? && current_user.admin? %> 
    <div class="row">
      <button type="button" class="btn btn-info btn-xs">
        <%= link_to "Edit The Tag", edit_category_path(@category) %>
      </button>
    </div>
  <% end %>
  <%= will_paginate @category_articles %>
</div>
<%= render 'articles/article', obj: @category_articles %>
<div align="center">
  <%= will_paginate @category_articles %>
</div>

