<h2 align="center"> <%= @article.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
  <% if @article.user %>
  <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Contributed by:</li>
          <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
          <li class="article-title">
            <%= link_to @article.user.username, user_path(@article.user) %>
          </li>
          <li>
            <small>
              <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
            </small>
          </li>
        </div>
      </div>
  </ul>
  <% end %>
  <h4 class="article-meta-details center">
    Created <%= time_ago_in_words(@article.created_at) %> ago,
                   last updated <%= time_ago_in_words(@article.updated_at) %> ago
  </h4>
  <h4 class="center description"><strong>Content:</strong></h4>
  <hr>
  <div class="article-content">
    <%= simple_format(@article.description) %>
  </div>
  <div class="article-actions">
    <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary" %>
    <%= link_to "Delete this article", article_path(@article), method: :delete,
                                        data: { confirm: "Are you sure you want to delete the article?"},
                                        class: "btn btn-danger" %>
    <%= link_to "View all articles", articles_path, class: "btn btn-success" %>
  </div>
</div>